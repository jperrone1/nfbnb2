#map-canvas { height: 400px; min-width: 960px; width: 100%; }

.jumbotron {
  background-image:url(<%= asset_path '2335.JPG' %>);
  background-size: 100% 100%;
  height: 500px;
}

.jumbotron .container {
  position: relative;
  top:100px;
}

.jumbotron h1 {
  color: #fff;
  font-size: 48px;  
  font-family: 'Shift', sans-serif;
  font-weight: bold;
}

.jumbotron p {
  font-size: 20px;
  color: #fff;
}

