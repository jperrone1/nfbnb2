
<%= form_for(@accommodation, multipart: true, class: "form-horizontal", role: "form") do |f| %>
  <% if @accommodation.errors.any? %>
    <div id="error_explanation">
      <h2><%= pluralize(@accommodation.errors.count, "error") %> prohibited this accommodation from being saved:</h2>

      <ul>
      <% @accommodation.errors.full_messages.each do |msg| %>
        <li><%= msg %></li>
      <% end %>
      </ul>
    </div>
  <% end %>

  <div class="form-group"> 
    <%= f.label :price %>
    <%= f.text_field :price, :autofocus => true %>
  </div>
  <div class="form-group">  
    <%= f.label :description %>
    <%= f.text_area :description %>
  </div>
  <div class="form-group"> 
    <%= f.label :listing_type %>
    <%= f.select :listing_type, ["Entire home/apt.", "Private room", "Shared room"] %>
  </div>
  <div class="form-group"> 
    <%= f.label :neighborhood %>
    <%= f.text_field :locale %>
  </div>
  <div class="form-group"> 
    <%= f.label :city %>
    <%= f.text_field :city %>
  </div>
  <div class="form-group"> 
    <%= f.label :address1 %>
    <%= f.text_field :address1 %>
  </div>
  <div class="form-group">  
    <%= f.label :address2 %>
    <%= f.text_field :address2 %>
  </div>
  <div class="form-group"> 
    <%= f.label :state %>
    <%= f.text_field :state %>
  </div>
  <div class="form-group"> 
    <%= f.label :zip %>
    <%= f.text_field :zip %>
  </div>
  <div class="form-group"> 
    <%= f.label :phone %>
    <%= f.text_field :phone %>
  </div>
  <div class="form-group">
    <%= f.label :image %>
    <%= f.file_field :image %>
  </div>
  <div class="actions">
    <%= f.submit 'Create/Update listing' %>
    <%= link_to 'Cancel', root_path, class: 'button' %>
  </div>
<% end %>